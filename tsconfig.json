{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ES2024"]
  },
  "include": ["./src/**/*.ts", "./src/**/*.d.ts"],
  "exclude": ["node_modules"]
}